<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LightActivity">

    <!-- 스크롤 뷰를 이용해 조명 리스트를 담을 컨테이너 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/lightContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- BehaviorMode과 MusicMode 버튼을 나란히 배치 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/actionModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Action Mode"
            android:textColor="@android:color/white"
            android:padding="12dp" />

        <Button
            android:id="@+id/musicModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Music Mode"
            android:textColor="@android:color/white"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Give Feedback 버튼을 조명 상태 아래에 배치 -->
    <Button
        android:id="@+id/feedbackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give Feedback"
        android:background="@color/design_default_color_primary"
        android:textColor="@android:color/white"
        android:padding="12dp" />
</LinearLayout>
